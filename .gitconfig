# Usage
# file: ~/.gitconfig
#   [include]
#     path = this/file/path/.gitconfig
#   [user]
#     name = hoge
#     email = your@mail.address
#   [core]
#     excludesfile = /your/file/path/.gitignore_global

[color]
  ui = auto
[alias]
  st     = status --short --branch
  ol     = log --oneline --graph
  co     = checkout
  br     = branch
  ci     = commit -v
  fix    = commit --amend -v
  fixa   = commit --amend -v -a
  ca     = commit -v -a
  aa     = add .
  reh    = reset --hard
  ri     = rebase -i
  df     = diff
  dc     = diff --cached
  sh     = show
  pl     = pull
  plr    = pull --rebase
  ps     = push
  psu    = !git push -u origin "$(git rev-parse --abbrev-ref HEAD)"
  gr     = grep -I
[push]
  default = simple
[core]
  editor = vim +1 -c 'set fenc=utf-8'
  preloadindex = true
  pager = /usr/share/git/diff-highlight/diff-highlight | less -x2
#  excludesfile = .gitignore_global
[help]
  autocorrect = -1

[url "git@github.com:"]
  pushinsteadof = "git://github.com/"
  pushinsteadof = "https://github.com"

[rebase]
  autosquash = true
[github]
  user = pocke

[tig "bind"]
  generic = g move-first-line
  generic = G move-last-line

[ghq]
  root = ~/ghq
  root = ~/go/src

[merge]
  ff = false
